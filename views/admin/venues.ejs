<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
    <link rel="stylesheet" href="/css/main.css">
    <link rel="stylesheet" href="/css/partials.css">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
</head>
<body>
    <% if (locals.showNavbar !== false) { %>
        <%- include('../partials/navbar') %>
    <% } %>
    
<main class="main-content">

<div class="page-header">
    <div class="container">
        <div class="header-content">
            <div class="header-text">
                <h1 class="page-title">
                    <i class="fas fa-building"></i>
                    Venue Management
                </h1>
                <p class="page-subtitle">Manage event venues and their availability</p>
            </div>
            
            <div class="header-actions">
                <button class="btn btn-primary" id="addVenueBtn">
                    <i class="fas fa-plus"></i>
                    Add Venue
                </button>
            </div>
        </div>
    </div>
</div>

<div class="container">

    <% if (error) { %>
        <div class="alert alert-error">
            <i class="fas fa-exclamation-circle"></i>
            <%= error %>
        </div>
    <% } %>
    
    <% if (success) { %>
        <div class="alert alert-success">
            <i class="fas fa-check-circle"></i>
            <%= success %>
        </div>
    <% } %>

    <!-- Add Venue Form -->
    <div id="addVenueForm" class="form-card" style="display: none;">
        <h3>Add New Venue</h3>

        <form action="/admin/venues" method="POST" class="venue-form">
            <div class="form-row">
                <div class="form-group">
                    <label class="form-label">Venue Name *</label>
                    <input type="text" name="name" class="form-input" required placeholder="Enter venue name">
                </div>
                
                <div class="form-group">
                    <label class="form-label">Capacity *</label>
                    <input type="number" name="capacity" class="form-input" required min="1" placeholder="Maximum capacity">
                </div>
            </div>
            
            <div class="form-group">
                <label class="form-label">Location *</label>
                <input type="text" name="location" class="form-input" required placeholder="Building, floor, room details">
            </div>
            
            <div class="form-group">
                <label class="form-label">Available Resources</label>
                <textarea name="resources" class="form-textarea" rows="3"
                    placeholder="Projector, AC, WiFi, etc."></textarea>
            </div>
            
            <div class="form-actions">
                <button type="button" class="btn btn-secondary" id="cancelAddVenueBtn">
                    Cancel
                </button>
                <button type="submit" class="btn btn-primary">
                    <i class="fas fa-plus"></i>
                    Add Venue
                </button>
            </div>
        </form>
    </div>

    <!-- Venues List -->
    <div class="venues-grid">

        <% if (venues && venues.length > 0) { %>

            <% venues.forEach(venue => { %>
                <div class="venue-card">

                    <div class="venue-header">
                        <h3 class="venue-name"><%= venue.name %></h3>
                        <div class="venue-capacity">
                            <i class="fas fa-users"></i>
                            <span><%= venue.capacity %> people</span>
                        </div>
                    </div>
                    
                    <div class="venue-details">
                        <div class="venue-info">
                            <i class="fas fa-map-marker-alt"></i>
                            <span><%= venue.location %></span>
                        </div>
                        
                        <% if (venue.resources && venue.resources.length > 0) { %>
                            <div class="venue-facilities">
                                <strong>Resources:</strong>
                                <p><%= venue.resources.join(', ') %></p>
                            </div>
                        <% } %>
                    </div>
                    
                    <div class="venue-stats">
                        <div class="stat-item">
                            <span class="stat-label">Total Bookings</span>
                            <span class="stat-value"><%= venue.bookingCount || 0 %></span>
                        </div>
                        <div class="stat-item">
                            <span class="stat-label">Status</span>
                            <span class="stat-value status-active">Active</span>
                        </div>
                    </div>
                    
                    <div class="venue-actions">

                        <button class="btn btn-sm btn-outline editVenueBtn"
                                data-id="<%= venue._id %>">
                            <i class="fas fa-edit"></i>
                            Edit
                        </button>

                        <button class="btn btn-sm btn-outline scheduleVenueBtn"
                                data-id="<%= venue._id %>">
                            <i class="fas fa-calendar"></i>
                            Schedule
                        </button>

                        <form action="/admin/venues/<%= venue._id %>/delete"
                              method="POST"
                              class="deleteVenueForm"
                              data-name="<%= venue.name %>">

                            <button type="submit" class="btn btn-sm btn-danger">
                                <i class="fas fa-trash"></i>
                                Delete
                            </button>
                        </form>

                    </div>

                </div>
            <% }) %>

        <% } else { %>

            <div class="empty-state">
                <i class="fas fa-building"></i>
                <h3>No Venues Available</h3>
                <p>Start by adding your first venue to enable event bookings.</p>
                <button class="btn btn-primary" id="addFirstVenueBtn">
                    <i class="fas fa-plus"></i>
                    Add First Venue
                </button>
            </div>

        <% } %>

    </div>
</div>

</main>

<% if (locals.showNavbar !== false) { %>
    <%- include('../partials/footer') %>
<% } %>

<div id="toast-container" class="toast-container"></div>

<script src="/js/main.js"></script>
<script src="/js/partials.js"></script>
<script src="/js/notifications.js"></script>

</body>
</html>