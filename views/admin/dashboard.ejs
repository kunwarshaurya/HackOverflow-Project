<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
    <link rel="stylesheet" href="/css/main.css">
    <link rel="stylesheet" href="/css/partials.css">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
</head>
<body>
    <%- include('../partials/navbar') %>
    
    <main class="main-content">
        <div class="container">
            <div class="page-header">
                <h1><i class="fas fa-tachometer-alt"></i> Admin Dashboard</h1>
                <p>Overview of platform activity and management tools</p>
            </div>
            
            <!-- Stats Cards -->
            <div class="stats-grid">
                <div class="stat-card">
                    <div class="stat-header">
                        <h3 class="stat-title">Total Events</h3>
                        <div class="stat-icon primary">
                            <i class="fas fa-calendar"></i>
                        </div>
                    </div>
                    <p class="stat-value"><%= stats.totalEvents %></p>
                </div>
                
                <div class="stat-card">
                    <div class="stat-header">
                        <h3 class="stat-title">Active Events</h3>
                        <div class="stat-icon success">
                            <i class="fas fa-check-circle"></i>
                        </div>
                    </div>
                    <p class="stat-value"><%= stats.activeEvents %></p>
                </div>
                
                <div class="stat-card">
                    <div class="stat-header">
                        <h3 class="stat-title">Pending Approvals</h3>
                        <div class="stat-icon warning">
                            <i class="fas fa-clock"></i>
                        </div>
                    </div>
                    <p class="stat-value"><%= stats.pendingEvents %></p>
                </div>
                
                <div class="stat-card">
                    <div class="stat-header">
                        <h3 class="stat-title">Total Clubs</h3>
                        <div class="stat-icon primary">
                            <i class="fas fa-users"></i>
                        </div>
                    </div>
                    <p class="stat-value"><%= stats.totalClubs %></p>
                </div>
                    <div class="stat-card">
                    <div class="stat-header">
                        <h3 class="stat-title">Total Venues </h3>
                        <div class="stat-icon primary">
                            <i class="fas fa-users"></i>
                        </div>
                    </div>
                    <p class="stat-value"><%= stats.totalVenues %></p>
                </div>
            </div>
            
            <!-- Quick Actions -->
            <div class="card">
                <div class="card-header">
                    <h2><i class="fas fa-bolt"></i> Quick Actions</h2>
                </div>
                <div class="card-body">
                    <div class="action-buttons">
                        <a href="/admin/approvals" class="btn btn-primary">
                            <i class="fas fa-check-circle"></i>
                            Review Pending Events (<%= stats.pendingEvents %>)
                        </a>
                        <a href="/admin/venues" class="btn btn-secondary">
                            <i class="fas fa-building"></i>
                            Manage Venues
                        </a>
                        <a href="/admin/clubs" class="btn btn-secondary">
                            <i class="fas fa-users"></i>
                            Manage Clubs
                        </a>
                    </div>
                </div>
            </div>
            
            <!-- Recent Events -->
            <div class="card">
                <div class="card-header">
                    <h2><i class="fas fa-history"></i> Recent Events</h2>
                </div>
                <div class="card-body">
                    <% if (events && events.length > 0) { %>
                        <div class="data-table">
                            <table>
                                <thead>
                                    <tr>
                                        <th>Event Name</th>
                                        <th>Status</th>
                                        <th>Date</th>
                                        <th>Budget</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <% events.slice(0, 10).forEach(event => { %>
                                        <tr>
                                            <td>
                                                <strong><%= event.name %></strong>
                                                <br>
                                                <small class="text-muted"><%= event.description.substring(0, 50) %>...</small>
                                            </td>
                                            <td>
                                                <span class="badge badge-<%= event.status === 'approved' ? 'success' : event.status === 'pending' ? 'warning' : 'error' %>">
                                                    <%= event.status.toUpperCase() %>
                                                </span>
                                            </td>
                                            <td><%= new Date(event.date).toLocaleDateString() %></td>
                                            <td>â‚¹<%= event.budget ? event.budget.toLocaleString() : '0' %></td>
                                            <td>
                                                <a href="/events/<%= event._id %>" class="btn btn-small btn-secondary">
                                                    <i class="fas fa-eye"></i> View
                                                </a>
                                                <% if (event.status === 'pending') { %>
                                                    <a href="/admin/approvals" class="btn btn-small btn-primary">
                                                        <i class="fas fa-check"></i> Review
                                                    </a>
                                                <% } %>
                                            </td>
                                        </tr>
                                    <% }); %>
                                </tbody>
                            </table>
                        </div>
                    <% } else { %>
                        <div class="empty-state">
                            <i class="fas fa-calendar-times"></i>
                            <h3>No events yet</h3>
                            <p>Events will appear here once clubs start creating them.</p>
                        </div>
                    <% } %>
                </div>
            </div>
        </div>
    </main>
    
   <%- include('../partials/footer') %>
    
    <div id="toast-container" class="toast-container"></div>
    
    <script src="/js/main.js"></script>
    <script src="/js/partials.js"></script>
    <script src="/js/notifications.js"></script>
</body>
</html>

<style>
.page-header {
    margin-bottom: var(--spacing-8);
    text-align: center;
}

.page-header h1 {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: var(--spacing-3);
    margin-bottom: var(--spacing-2);
}

.action-buttons {
    display: flex;
    gap: var(--spacing-4);
    flex-wrap: wrap;
}

.empty-state {
    text-align: center;
    padding: var(--spacing-12);
    color: var(--gray-500);
}

.empty-state i {
    font-size: var(--font-size-4xl);
    margin-bottom: var(--spacing-4);
    color: var(--gray-400);
}

.text-muted {
    color: var(--gray-500);
}

@media (max-width: 768px) {
    .action-buttons {
        flex-direction: column;
    }
    
    .action-buttons .btn {
        width: 100%;
    }
}
</style>