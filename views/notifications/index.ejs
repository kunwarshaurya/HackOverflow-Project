<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
    <link rel="stylesheet" href="/css/main.css">
    <link rel="stylesheet" href="/css/partials.css">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <style>
        /* Enhanced notification styles */
        .notification-item {
            display: flex;
            align-items: flex-start;
            gap: 1rem;
            padding: 1rem;
            border-bottom: 1px solid #e9ecef;
            transition: all 0.2s ease;
            cursor: pointer;
        }
        
        .notification-item:hover {
            background-color: #f8f9fa;
        }
        
        .notification-item.unread {
            background-color: #f8f9ff;
            border-left: 4px solid #007bff;
        }
        
        .notification-checkbox {
            flex-shrink: 0;
            margin-top: 0.25rem;
        }
        
        .notification-checkbox input[type="checkbox"] {
            width: 16px;
            height: 16px;
            cursor: pointer;
        }
        
        .notification-content {
            flex: 1;
            min-width: 0;
        }
        
        .notification-message {
            font-weight: 500;
            margin-bottom: 0.5rem;
            color: #212529;
        }
        
        .notification-meta {
            display: flex;
            align-items: center;
            gap: 1rem;
            font-size: 0.875rem;
            color: #6c757d;
            flex-wrap: wrap;
        }
        
        .notification-time {
            display: flex;
            align-items: center;
            gap: 0.25rem;
        }
        
        .unread-indicator {
            display: flex;
            align-items: center;
            gap: 0.25rem;
            color: #007bff;
            font-weight: 500;
        }
        
        .unread-indicator i {
            font-size: 0.5rem;
        }
        
        .notification-actions {
            display: flex;
            gap: 0.5rem;
            flex-shrink: 0;
            margin-top: 0.25rem;
        }
        
        .notification-bulk-controls {
            background: #f8f9fa;
            border: 1px solid #dee2e6;
            border-radius: 8px;
            padding: 1rem;
            margin-bottom: 1rem;
            display: flex;
            justify-content: space-between;
            align-items: center;
            flex-wrap: wrap;
            gap: 1rem;
        }
        
        .bulk-actions {
            display: flex;
            gap: 0.5rem;
            flex-wrap: wrap;
        }
        
        .selection-info {
            font-size: 0.875rem;
            color: #6c757d;
            font-weight: 500;
        }
        
        .header-actions {
            display: flex;
            gap: 0.5rem;
            flex-wrap: wrap;
        }
        
        /* Loading and error states */
        .loading-spinner {
            text-align: center;
            padding: 3rem;
            color: #6c757d;
        }
        
        .loading-spinner i {
            font-size: 2rem;
            margin-bottom: 1rem;
            color: #007bff;
        }
        
        .error-message {
            text-align: center;
            padding: 3rem;
            color: #6c757d;
        }
        
        .error-message i {
            font-size: 3rem;
            margin-bottom: 1rem;
            color: #dc3545;
        }
        
        .error-message h3 {
            color: #212529;
            margin-bottom: 0.5rem;
        }
        
        .error-message p {
            margin-bottom: 1.5rem;
        }
        
        /* Button enhancements */
        .btn:disabled {
            opacity: 0.6;
            cursor: not-allowed;
        }
        
        .btn-outline-success {
            color: #28a745;
            border-color: #28a745;
        }
        
        .btn-outline-success:hover:not(:disabled) {
            background-color: #28a745;
            color: white;
        }
        
        .unread-count {
            color: #007bff;
            font-weight: 600;
        }
        
        /* Responsive design */
        @media (max-width: 768px) {
            .notification-item {
                flex-direction: column;
                gap: 0.75rem;
            }
            
            .notification-meta {
                flex-direction: column;
                align-items: flex-start;
                gap: 0.5rem;
            }
            
            .notification-actions {
                align-self: flex-end;
            }
            
            .notification-bulk-controls {
                flex-direction: column;
                align-items: stretch;
            }
            
            .bulk-actions {
                justify-content: center;
            }
            
            .header-actions {
                width: 100%;
                justify-content: center;
            }
        }
        
        /* Accessibility improvements */
        .notification-item:focus-within {
            outline: 2px solid #007bff;
            outline-offset: 2px;
        }
        
        .btn:focus {
            box-shadow: 0 0 0 0.2rem rgba(0, 123, 255, 0.25);
        }
        
        /* Animation for smooth transitions */
        .notification-item {
            animation: fadeIn 0.3s ease-in;
        }
        
        @keyframes fadeIn {
            from {
                opacity: 0;
                transform: translateY(-10px);
            }
            to {
                opacity: 1;
                transform: translateY(0);
            }
        }
    </style>
</head>
<body>
    <% if (locals.showNavbar !== false) { %>
        <%- include('../partials/navbar') %>
    <% } %>
    
    <main class="main-content">
<div class="page-header">
    <div class="container">
        <div class="header-content">
            <div class="header-text">
                <h1 class="page-title">
                    <i class="fas fa-bell"></i>
                    Notifications
                </h1>
                <p class="page-subtitle">Stay updated with your latest activities</p>
            </div>
            
            <div class="header-actions">
                <button class="btn btn-outline" onclick="notificationManager.markAllAsRead()" id="mark-all-btn">
                    <i class="fas fa-check-double"></i>
                    <span id="mark-all-text">Mark All Read</span>
                </button>
                <button class="btn btn-outline-secondary" onclick="notificationManager.toggleSelectAll()" id="select-all-btn">
                    <i class="fas fa-check-square"></i>
                    <span id="select-all-text">Select All</span>
                </button>
            </div>
        </div>
    </div>
</div>

<!-- Loading State -->
<div id="loading-state" class="container" style="display: none;">
    <div class="loading-spinner">
        <i class="fas fa-spinner fa-spin"></i>
        <p>Loading notifications...</p>
    </div>
</div>

<!-- Error State -->
<div id="error-state" class="container" style="display: none;">
    <div class="error-message">
        <i class="fas fa-exclamation-triangle"></i>
        <h3>Failed to Load Notifications</h3>
        <p id="error-message-text">Something went wrong while loading your notifications.</p>
        <button class="btn btn-primary" onclick="retryLoadNotifications()">
            <i class="fas fa-redo"></i>
            Try Again
        </button>
    </div>
</div>

<div class="container">
    <!-- Bulk Action Controls -->
    <div class="notification-bulk-controls" id="bulk-controls" style="display: none;">
        <div class="bulk-actions">
            <button class="btn btn-sm btn-primary" onclick="notificationManager.markSelectedAsRead()" id="mark-selected-btn">
                <i class="fas fa-check"></i>
                <span>Mark Selected as Read</span>
            </button>
            <button class="btn btn-sm btn-danger" onclick="notificationManager.deleteSelected()" id="delete-selected-btn">
                <i class="fas fa-trash"></i>
                <span>Delete Selected</span>
            </button>
            <button class="btn btn-sm btn-outline-secondary" onclick="notificationManager.clearSelection()">
                <i class="fas fa-times"></i>
                Clear Selection
            </button>
        </div>
        <div class="selection-info">
            <span id="selection-count">0 selected</span>
        </div>
    </div>

    <% if (notifications && notifications.length > 0) { %>
        <div class="notifications-list" id="notifications-container">
            <% notifications.forEach(notification => { %>
                <div class="notification-item <%= notification.isRead ? 'read' : 'unread' %> type-<%= notification.type %>" 
                     data-id="<%= notification._id %>">
                    
                    <!-- Bulk Selection Checkbox -->
                    <div class="notification-checkbox">
                        <input type="checkbox" 
                               class="notification-select" 
                               value="<%= notification._id %>" 
                               onchange="updateBulkSelection()"
                               aria-label="Select notification">
                    </div>
                    
                    <div class="notification-icon">
                        <% if (notification.type === 'success') { %>
                            <i class="fas fa-check-circle"></i>
                        <% } else if (notification.type === 'error') { %>
                            <i class="fas fa-exclamation-circle"></i>
                        <% } else if (notification.type === 'info') { %>
                            <i class="fas fa-info-circle"></i>
                        <% } else if (notification.type === 'warning') { %>
                            <i class="fas fa-exclamation-triangle"></i>
                        <% } else { %>
                            <i class="fas fa-bell"></i>
                        <% } %>
                    </div>
                    
                    <div class="notification-content" onclick="handleNotificationClick('<%= notification._id %>', '<%= !notification.isRead %>')">
                        <div class="notification-message">
                            <%= notification.message %>
                        </div>
                        
                        <div class="notification-meta">
                            <span class="notification-time">
                                <i class="fas fa-clock"></i>
                                <%= new Date(notification.createdAt).toLocaleString() %>
                            </span>
                            
                            <% if (!notification.isRead) { %>
                                <span class="notification-status unread-indicator">
                                    <i class="fas fa-circle"></i>
                                    Unread
                                </span>
                            <% } %>
                            
                            <% if (notification.relatedEvent) { %>
                                <a href="/events/<%= notification.relatedEvent %>" class="notification-link">
                                    <i class="fas fa-external-link-alt"></i>
                                    View Event
                                </a>
                            <% } %>
                        </div>
                    </div>
                    
                    <div class="notification-actions">
                        <% if (!notification.isRead) { %>
                            <button class="btn btn-sm btn-outline-success notification-mark-read" 
                                    onclick="markNotificationAsRead('<%= notification._id %>')"
                                    title="Mark as read"
                                    aria-label="Mark notification as read">
                                <i class="fas fa-check"></i>
                            </button>
                        <% } %>
                        
                        <button class="btn btn-sm btn-outline-danger notification-delete" 
                                onclick="deleteNotificationWithConfirm('<%= notification._id %>')"
                                title="Delete notification"
                                aria-label="Delete notification">
                            <i class="fas fa-trash"></i>
                        </button>
                    </div>
                </div>
            <% }) %>
        </div>
        
        <!-- Pagination and Stats -->
        <div class="pagination-container">
            <div class="pagination-info">
                <span>Showing <%= notifications.length %> notifications</span>
                <% 
                const unreadCount = notifications.filter(n => !n.isRead).length;
                if (unreadCount > 0) { 
                %>
                    <span class="unread-count">(<%= unreadCount %> unread)</span>
                <% } %>
            </div>
        </div>
    <% } else { %>
        <div class="empty-state">
            <i class="fas fa-bell-slash"></i>
            <h3>No Notifications</h3>
            <p>You're all caught up! No new notifications at the moment.</p>
            <a href="/" class="btn btn-primary">
                <i class="fas fa-home"></i>
                Back to Dashboard
            </a>
        </div>
    <% } %>
</div>

<script>
// Enhanced notification management with loading states and error handling
let isLoading = false;

// Show/hide loading state
function showLoadingState(show = true) {
    const loadingState = document.getElementById('loading-state');
    const errorState = document.getElementById('error-state');
    const container = document.querySelector('.container:not(#loading-state):not(#error-state)');
    
    if (show) {
        if (loadingState) loadingState.style.display = 'block';
        if (errorState) errorState.style.display = 'none';
        if (container) container.style.display = 'none';
        isLoading = true;
    } else {
        if (loadingState) loadingState.style.display = 'none';
        if (container) container.style.display = 'block';
        isLoading = false;
    }
}

// Show error state
function showErrorState(message = 'Something went wrong while loading your notifications.') {
    const loadingState = document.getElementById('loading-state');
    const errorState = document.getElementById('error-state');
    const container = document.querySelector('.container:not(#loading-state):not(#error-state)');
    const errorMessageText = document.getElementById('error-message-text');
    
    if (loadingState) loadingState.style.display = 'none';
    if (errorState) errorState.style.display = 'block';
    if (container) container.style.display = 'none';
    if (errorMessageText) errorMessageText.textContent = message;
    isLoading = false;
}

// Retry loading notifications
async function retryLoadNotifications() {
    if (isLoading) return;
    
    try {
        showLoadingState(true);
        await new Promise(resolve => setTimeout(resolve, 500)); // Brief delay for UX
        
        // If we have the notification manager, use it
        if (window.notificationManager) {
            await window.notificationManager.loadNotifications();
        } else {
            // Fallback to page reload
            window.location.reload();
        }
        
        showLoadingState(false);
    } catch (error) {
        console.error('Failed to retry loading notifications:', error);
        showErrorState('Failed to load notifications. Please try again.');
    }
}

// Enhanced notification click handler
async function handleNotificationClick(notificationId, isUnread) {
    if (isUnread && window.notificationManager) {
        try {
            await window.notificationManager.markAsRead(notificationId);
        } catch (error) {
            console.error('Failed to mark notification as read:', error);
            // Don't show error toast here as it's handled in the manager
        }
    }
}

// Enhanced mark as read with loading state
async function markNotificationAsRead(notificationId) {
    if (isLoading) return;
    
    const button = document.querySelector(`button[onclick="markNotificationAsRead('${notificationId}')"]`);
    const originalContent = button ? button.innerHTML : '';
    
    try {
        // Show loading state on button
        if (button) {
            button.disabled = true;
            button.innerHTML = '<i class="fas fa-spinner fa-spin"></i>';
        }
        
        if (window.notificationManager) {
            await window.notificationManager.markAsRead(notificationId);
        } else {
            // Fallback to direct API call
            const response = await fetch(`/notifications/${notificationId}/read`, {
                method: 'PUT',
                headers: { 'Content-Type': 'application/json' }
            });
            
            if (response.ok) {
                window.location.reload();
            } else {
                throw new Error(`HTTP ${response.status}: ${response.statusText}`);
            }
        }
    } catch (error) {
        console.error('Error marking notification as read:', error);
        if (window.showToast) {
            window.showToast('error', 'Error', 'Failed to mark notification as read');
        } else {
            alert('Failed to mark notification as read');
        }
        
        // Restore button state
        if (button) {
            button.disabled = false;
            button.innerHTML = originalContent;
        }
    }
}

// Enhanced delete with confirmation and loading state
async function deleteNotificationWithConfirm(notificationId) {
    if (isLoading) return;
    
    if (!confirm('Are you sure you want to delete this notification? This action cannot be undone.')) {
        return;
    }
    
    const button = document.querySelector(`button[onclick="deleteNotificationWithConfirm('${notificationId}')"]`);
    const originalContent = button ? button.innerHTML : '';
    
    try {
        // Show loading state on button
        if (button) {
            button.disabled = true;
            button.innerHTML = '<i class="fas fa-spinner fa-spin"></i>';
        }
        
        if (window.notificationManager) {
            await window.notificationManager.deleteNotification(notificationId);
        } else {
            // Fallback to direct API call
            const response = await fetch(`/notifications/${notificationId}`, {
                method: 'DELETE',
                headers: { 'Content-Type': 'application/json' }
            });
            
            if (response.ok) {
                window.location.reload();
            } else {
                throw new Error(`HTTP ${response.status}: ${response.statusText}`);
            }
        }
    } catch (error) {
        console.error('Error deleting notification:', error);
        if (window.showToast) {
            window.showToast('error', 'Error', 'Failed to delete notification');
        } else {
            alert('Failed to delete notification');
        }
        
        // Restore button state
        if (button) {
            button.disabled = false;
            button.innerHTML = originalContent;
        }
    }
}

// Bulk selection management
function updateBulkSelection() {
    const checkboxes = document.querySelectorAll('.notification-select');
    const selectedIds = Array.from(checkboxes).filter(cb => cb.checked).map(cb => cb.value);
    
    const bulkControls = document.getElementById('bulk-controls');
    const selectionCount = document.getElementById('selection-count');
    const selectAllBtn = document.getElementById('select-all-btn');
    const selectAllText = document.getElementById('select-all-text');
    
    // Update bulk controls visibility
    if (bulkControls) {
        bulkControls.style.display = selectedIds.length > 0 ? 'block' : 'none';
    }
    
    // Update selection count
    if (selectionCount) {
        selectionCount.textContent = `${selectedIds.length} selected`;
    }
    
    // Update select all button text
    if (selectAllText && checkboxes.length > 0) {
        const allSelected = Array.from(checkboxes).every(cb => cb.checked);
        selectAllText.textContent = allSelected ? 'Deselect All' : 'Select All';
    }
    
    // Update button states
    updateBulkActionButtons(selectedIds);
}

// Update bulk action button states
function updateBulkActionButtons(selectedIds) {
    const markSelectedBtn = document.getElementById('mark-selected-btn');
    const deleteSelectedBtn = document.getElementById('delete-selected-btn');
    
    if (markSelectedBtn && deleteSelectedBtn) {
        const hasSelection = selectedIds.length > 0;
        markSelectedBtn.disabled = !hasSelection;
        deleteSelectedBtn.disabled = !hasSelection;
        
        // Update button text with count
        if (hasSelection) {
            markSelectedBtn.querySelector('span').textContent = `Mark Selected as Read (${selectedIds.length})`;
            deleteSelectedBtn.querySelector('span').textContent = `Delete Selected (${selectedIds.length})`;
        } else {
            markSelectedBtn.querySelector('span').textContent = 'Mark Selected as Read';
            deleteSelectedBtn.querySelector('span').textContent = 'Delete Selected';
        }
    }
}

// Update mark all button based on unread count
function updateMarkAllButton() {
    const markAllBtn = document.getElementById('mark-all-btn');
    const markAllText = document.getElementById('mark-all-text');
    
    if (markAllBtn && markAllText) {
        const unreadItems = document.querySelectorAll('.notification-item.unread');
        const unreadCount = unreadItems.length;
        
        if (unreadCount > 0) {
            markAllBtn.disabled = false;
            markAllText.textContent = `Mark All Read (${unreadCount})`;
        } else {
            markAllBtn.disabled = true;
            markAllText.textContent = 'All Read';
        }
    }
}

// Initialize page functionality
document.addEventListener('DOMContentLoaded', function() {
    // Update button states on page load
    updateBulkSelection();
    updateMarkAllButton();
    
    // Set up notification manager integration if available
    if (window.notificationManager) {
        // Override the notification manager's render method to update our UI
        const originalRender = window.notificationManager.renderNotifications;
        window.notificationManager.renderNotifications = function() {
            originalRender.call(this);
            updateBulkSelection();
            updateMarkAllButton();
        };
        
        // Override the toggle select all method
        window.notificationManager.toggleSelectAll = function() {
            const checkboxes = document.querySelectorAll('.notification-select');
            const allChecked = Array.from(checkboxes).every(cb => cb.checked);
            
            checkboxes.forEach(cb => {
                cb.checked = !allChecked;
            });
            
            updateBulkSelection();
        };
        
        // Override the clear selection method
        window.notificationManager.clearSelection = function() {
            const checkboxes = document.querySelectorAll('.notification-select');
            checkboxes.forEach(cb => {
                cb.checked = false;
            });
            updateBulkSelection();
        };
    }
    
    // Add keyboard shortcuts
    document.addEventListener('keydown', function(e) {
        // Ctrl/Cmd + A to select all
        if ((e.ctrlKey || e.metaKey) && e.key === 'a' && !e.target.matches('input, textarea')) {
            e.preventDefault();
            if (window.notificationManager) {
                window.notificationManager.toggleSelectAll();
            }
        }
        
        // Delete key to delete selected
        if (e.key === 'Delete' && !e.target.matches('input, textarea')) {
            const selectedIds = Array.from(document.querySelectorAll('.notification-select:checked')).map(cb => cb.value);
            if (selectedIds.length > 0 && window.notificationManager) {
                window.notificationManager.deleteSelected();
            }
        }
    });
});

// Legacy function support for backward compatibility
async function markAsRead(notificationId) {
    await markNotificationAsRead(notificationId);
}

async function markAllAsRead() {
    if (window.notificationManager) {
        await window.notificationManager.markAllAsRead();
    } else {
        // Fallback implementation
        try {
            const response = await fetch('/notifications/mark-all-read', {
                method: 'POST',
                headers: { 'Content-Type': 'application/json' }
            });
            
            if (response.ok) {
                window.location.reload();
            } else {
                alert('Failed to mark all notifications as read');
            }
        } catch (error) {
            console.error('Error marking all notifications as read:', error);
            alert('Failed to mark all notifications as read');
        }
    }
}

async function deleteNotification(notificationId) {
    await deleteNotificationWithConfirm(notificationId);
}
</script>
    </main>
    
    <% if (locals.showNavbar !== false) { %>
        <%- include('../partials/footer') %>
    <% } %>
    
    <!-- Toast Notifications -->
    <div id="toast-container" class="toast-container"></div>
    
    <script src="/js/main.js"></script>
    <script src="/js/components.js"></script>
    <script src="/js/notifications.js"></script>
</body>
</html>
