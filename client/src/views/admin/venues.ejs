<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
    <link rel="stylesheet" href="/css/main.css">
    <link rel="stylesheet" href="/css/components.css">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
</head>
<body>
    <% if (locals.showNavbar !== false) { %>
        <%- include('../components/navbar') %>
    <% } %>
    
    <main class="main-content">
<div class="page-header">
    <div class="container">
        <div class="header-content">
            <div class="header-text">
                <h1 class="page-title">
                    <i class="fas fa-building"></i>
                    Venue Management
                </h1>
                <p class="page-subtitle">Manage event venues and their availability</p>
            </div>
            
            <div class="header-actions">
                <button class="btn btn-primary" onclick="toggleAddVenueForm()">
                    <i class="fas fa-plus"></i>
                    Add Venue
                </button>
            </div>
        </div>
    </div>
</div>

<div class="container">
    <% if (error) { %>
        <div class="alert alert-error">
            <i class="fas fa-exclamation-circle"></i>
            <%= error %>
        </div>
    <% } %>
    
    <% if (success) { %>
        <div class="alert alert-success">
            <i class="fas fa-check-circle"></i>
            <%= success %>
        </div>
    <% } %>

    <!-- Add Venue Form -->
    <div id="addVenueForm" class="form-card" style="display: none;">
        <h3>Add New Venue</h3>
        <form action="/admin/venues" method="POST" class="venue-form">
            <div class="form-row">
                <div class="form-group">
                    <label for="name" class="form-label">Venue Name *</label>
                    <input type="text" id="name" name="name" class="form-input" required 
                           placeholder="Enter venue name">
                </div>
                
                <div class="form-group">
                    <label for="capacity" class="form-label">Capacity *</label>
                    <input type="number" id="capacity" name="capacity" class="form-input" required 
                           placeholder="Maximum capacity" min="1">
                </div>
            </div>
            
            <div class="form-group">
                <label for="location" class="form-label">Location *</label>
                <input type="text" id="location" name="location" class="form-input" required
                       placeholder="Building, floor, room details">
            </div>
            
            <div class="form-group">
                <label for="resources" class="form-label">Available Resources</label>
                <textarea id="resources" name="resources" class="form-textarea" rows="3" 
                          placeholder="List available resources (projector, AC, WiFi, etc.)"></textarea>
            </div>
            
            <div class="form-actions">
                <button type="button" class="btn btn-secondary" onclick="toggleAddVenueForm()">
                    Cancel
                </button>
                <button type="submit" class="btn btn-primary">
                    <i class="fas fa-plus"></i>
                    Add Venue
                </button>
            </div>
        </form>
    </div>

    <!-- Venues List -->
    <div class="venues-grid">
        <% if (venues && venues.length > 0) { %>
            <% venues.forEach(venue => { %>
                <div class="venue-card">
                    <div class="venue-header">
                        <h3 class="venue-name"><%= venue.name %></h3>
                        <div class="venue-capacity">
                            <i class="fas fa-users"></i>
                            <span><%= venue.capacity %> people</span>
                        </div>
                    </div>
                    
                    <div class="venue-details">
                        <div class="venue-info">
                            <i class="fas fa-map-marker-alt"></i>
                            <span><%= venue.location %></span>
                        </div>
                        
                        <% if (venue.resources && venue.resources.length > 0) { %>
                            <div class="venue-facilities">
                                <strong>Resources:</strong>
                                <p><%= Array.isArray(venue.resources) ? venue.resources.join(', ') : venue.resources %></p>
                            </div>
                        <% } %>
                    </div>
                    
                    <div class="venue-stats">
                        <div class="stat-item">
                            <span class="stat-label">Total Bookings</span>
                            <span class="stat-value"><%= venue.bookingCount || 0 %></span>
                        </div>
                        <div class="stat-item">
                            <span class="stat-label">Status</span>
                            <span class="stat-value status-active">Active</span>
                        </div>
                    </div>
                    
                    <div class="venue-actions">
                        <button class="btn btn-sm btn-outline" onclick="editVenue('<%= venue._id %>')">
                            <i class="fas fa-edit"></i>
                            Edit
                        </button>
                        <button class="btn btn-sm btn-outline" onclick="viewVenueSchedule('<%= venue._id %>')">
                            <i class="fas fa-calendar"></i>
                            Schedule
                        </button>
                    </div>
                </div>
            <% }) %>
        <% } else { %>
            <div class="empty-state">
                <i class="fas fa-building"></i>
                <h3>No Venues Available</h3>
                <p>Start by adding your first venue to enable event bookings.</p>
                <button class="btn btn-primary" onclick="toggleAddVenueForm()">
                    <i class="fas fa-plus"></i>
                    Add First Venue
                </button>
            </div>
        <% } %>
    </div>
</div>

<script>
function toggleAddVenueForm() {
    const form = document.getElementById('addVenueForm');
    const isVisible = form.style.display !== 'none';
    
    if (isVisible) {
        form.style.display = 'none';
        form.querySelector('form').reset();
    } else {
        form.style.display = 'block';
        form.querySelector('#name').focus();
    }
}

function editVenue(venueId) {
    // TODO: Implement edit functionality
    alert('Edit functionality coming soon!');
}

function viewVenueSchedule(venueId) {
    // TODO: Implement schedule view
    alert('Schedule view coming soon!');
}

// Auto-hide alerts after 5 seconds
document.addEventListener('DOMContentLoaded', function() {
    const alerts = document.querySelectorAll('.alert');
    alerts.forEach(alert => {
        setTimeout(() => {
            alert.style.opacity = '0';
            setTimeout(() => alert.remove(), 300);
        }, 5000);
    });
});
</script>
    </main>
    
    <% if (locals.showNavbar !== false) { %>
        <%- include('../components/footer') %>
    <% } %>
    
    <!-- Toast Notifications -->
    <div id="toast-container" class="toast-container"></div>
    
    <script src="/js/main.js"></script>
    <script src="/js/components.js"></script>
    <script src="/js/notifications.js"></script>
</body>
</html>