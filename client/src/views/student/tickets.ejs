<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
    <link rel="stylesheet" href="/css/main.css">
    <link rel="stylesheet" href="/css/components.css">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
</head>
<body>
    <% if (locals.showNavbar !== false) { %>
        <%- include('../components/navbar') %>
    <% } %>
    
    <main class="main-content">
<div class="page-header">
    <div class="container">
        <h1 class="page-title">
            <i class="fas fa-ticket-alt"></i>
            My Tickets
        </h1>
        <p class="page-subtitle">Events you've registered for</p>
    </div>
</div>

<div class="container">
    <% if (events && events.length > 0) { %>
        <div class="tickets-list">
            <% events.forEach(event => { %>
                <div class="ticket-card">
                    <div class="ticket-header">
                        <div class="ticket-info">
                            <h3 class="ticket-title">
                                <a href="/events/<%= event._id %>"><%= event.name %></a>
                            </h3>
                            <span class="ticket-status status-<%= event.status %>">
                                <%= event.status.charAt(0).toUpperCase() + event.status.slice(1) %>
                            </span>
                        </div>
                        <div class="ticket-qr">
                            <i class="fas fa-qrcode"></i>
                        </div>
                    </div>
                    
                    <div class="ticket-details">
                        <div class="detail-row">
                            <div class="detail-item">
                                <i class="fas fa-calendar"></i>
                                <span><%= new Date(event.date).toLocaleDateString() %></span>
                            </div>
                            <div class="detail-item">
                                <i class="fas fa-clock"></i>
                                <span><%= event.startTime %> - <%= event.endTime %></span>
                            </div>
                        </div>
                        <div class="detail-row">
                            <div class="detail-item">
                                <i class="fas fa-map-marker-alt"></i>
                                <span><%= event.venue?.name || 'TBA' %></span>
                            </div>
                            <div class="detail-item">
                                <i class="fas fa-users"></i>
                                <span><%= event.club?.name || 'Unknown Club' %></span>
                            </div>
                        </div>
                    </div>
                    
                    <div class="ticket-actions">
                        <a href="/events/<%= event._id %>" class="btn btn-outline btn-sm">
                            <i class="fas fa-eye"></i>
                            View Event
                        </a>
                        <% if (event.status === 'approved') { %>
                            <a href="/chat/event/<%= event._id %>" class="btn btn-primary btn-sm">
                                <i class="fas fa-comments"></i>
                                Join Chat
                            </a>
                        <% } %>
                    </div>
                </div>
            <% }) %>
        </div>
    <% } else { %>
        <div class="empty-state">
            <i class="fas fa-ticket-alt"></i>
            <h3>No Tickets Yet</h3>
            <p>You haven't registered for any events yet.</p>
            <a href="/student/discover" class="btn btn-primary">
                <i class="fas fa-compass"></i>
                Discover Events
            </a>
        </div>
    <% } %>
</div>
    </main>
    
    <% if (locals.showNavbar !== false) { %>
        <%- include('../components/footer') %>
    <% } %>
    
    <!-- Toast Notifications -->
    <div id="toast-container" class="toast-container"></div>
    
    <script src="/js/main.js"></script>
    <script src="/js/components.js"></script>
    <script src="/js/notifications.js"></script>
</body>
</html>