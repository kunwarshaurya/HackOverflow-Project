<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
    <link rel="stylesheet" href="/css/main.css">
    <link rel="stylesheet" href="/css/components.css">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
</head>
<body>
    <% if (locals.showNavbar !== false) { %>
        <%- include('../components/navbar') %>
    <% } %>
    
    <main class="main-content">
<div class="container">
    <% if (error) { %>
        <div class="alert alert-error">
            <i class="fas fa-exclamation-circle"></i>
            <%= error %>
        </div>
    <% } %>
    
    <% if (success) { %>
        <div class="alert alert-success">
            <i class="fas fa-check-circle"></i>
            <%= success %>
        </div>
    <% } %>

    <div class="event-detail-container">
        <div class="event-detail-header">
            <div class="event-title-section">
                <h1 class="event-title"><%= event.name %></h1>
                <span class="event-status status-<%= event.status %>">
                    <%= event.status.charAt(0).toUpperCase() + event.status.slice(1) %>
                </span>
            </div>
            
            <div class="event-actions">
                <% if (canRegister && !isRegistered) { %>
                    <form action="/student/events/<%= event._id %>/register" method="POST" style="display: inline;">
                        <button type="submit" class="btn btn-primary">
                            <i class="fas fa-user-plus"></i>
                            Register for Event
                        </button>
                    </form>
                <% } else if (isRegistered) { %>
                    <span class="registered-badge">
                        <i class="fas fa-check-circle"></i>
                        Registered
                    </span>
                <% } %>
            </div>
        </div>

        <div class="event-detail-content">
            <div class="event-main-info">
                <div class="event-description">
                    <h3>About This Event</h3>
                    <p><%= event.description %></p>
                </div>
                
                <div class="event-collaborators">
                    <h3>Organizing Clubs</h3>
                    <div class="club-list">
                        <div class="club-item primary">
                            <i class="fas fa-star"></i>
                            <span><%= event.club?.name || 'Unknown Club' %> (Host)</span>
                        </div>
                        <% if (event.collaborators && event.collaborators.length > 0) { %>
                            <% event.collaborators.forEach(collab => { %>
                                <div class="club-item">
                                    <i class="fas fa-handshake"></i>
                                    <span><%= collab.club?.name || 'Unknown Club' %> (<%= collab.role %>)</span>
                                </div>
                            <% }) %>
                        <% } %>
                    </div>
                </div>
            </div>
            
            <div class="event-sidebar">
                <div class="event-info-card">
                    <h3>Event Details</h3>
                    <div class="info-list">
                        <div class="info-item">
                            <i class="fas fa-calendar"></i>
                            <div>
                                <strong>Date</strong>
                                <span><%= new Date(event.date).toLocaleDateString() %></span>
                            </div>
                        </div>
                        
                        <div class="info-item">
                            <i class="fas fa-clock"></i>
                            <div>
                                <strong>Time</strong>
                                <span><%= event.startTime %> - <%= event.endTime %></span>
                            </div>
                        </div>
                        
                        <div class="info-item">
                            <i class="fas fa-map-marker-alt"></i>
                            <div>
                                <strong>Venue</strong>
                                <span><%= event.venue?.name || 'TBA' %></span>
                            </div>
                        </div>
                        
                        <div class="info-item">
                            <i class="fas fa-dollar-sign"></i>
                            <div>
                                <strong>Budget</strong>
                                <span>â‚¹<%= event.budget?.toLocaleString() || 'N/A' %></span>
                            </div>
                        </div>
                        
                        <div class="info-item">
                            <i class="fas fa-users"></i>
                            <div>
                                <strong>Registered</strong>
                                <span><%= event.attendees?.length || 0 %> participants</span>
                            </div>
                        </div>
                    </div>
                </div>
                
                <% if (isRegistered && event.status === 'approved') { %>
                    <div class="event-actions-card">
                        <h3>Event Actions</h3>
                        <div class="action-buttons">
                            <a href="/chat/event/<%= event._id %>" class="btn btn-primary btn-block">
                                <i class="fas fa-comments"></i>
                                Join Event Chat
                            </a>
                        </div>
                    </div>
                <% } %>
            </div>
        </div>
    </div>
</div>
    </main>
    
    <% if (locals.showNavbar !== false) { %>
        <%- include('../components/footer') %>
    <% } %>
    
    <!-- Toast Notifications -->
    <div id="toast-container" class="toast-container"></div>
    
    <script src="/js/main.js"></script>
    <script src="/js/components.js"></script>
    <script src="/js/notifications.js"></script>
</body>
</html>