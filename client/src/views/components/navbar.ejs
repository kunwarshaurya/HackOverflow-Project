<nav class="navbar">
    <div class="nav-container">
        <div class="nav-brand">
            <a href="/" class="brand-link">
                <i class="fas fa-code"></i>
                <span>HackOverflow</span>
            </a>
        </div>
        
        <div class="nav-menu" id="nav-menu">
            <% if (locals.isAuthenticated) { %>
                <!-- Role-based Navigation -->
                <% if (locals.user.role === 'admin') { %>
                    <a href="/admin/dashboard" class="nav-link">
                        <i class="fas fa-tachometer-alt"></i> Dashboard
                    </a>
                    <a href="/admin/approvals" class="nav-link">
                        <i class="fas fa-check-circle"></i> Approvals
                    </a>
                    <a href="/admin/venues" class="nav-link">
                        <i class="fas fa-building"></i> Venues
                    </a>
                    <a href="/admin/clubs" class="nav-link">
                        <i class="fas fa-users"></i> Clubs
                    </a>
                <% } else if (locals.user.role === 'club_lead') { %>
                    <a href="/club/dashboard" class="nav-link">
                        <i class="fas fa-tachometer-alt"></i> Dashboard
                    </a>
                    <a href="/club/create-event" class="nav-link">
                        <i class="fas fa-plus"></i> Create Event
                    </a>
                    <a href="/club/events" class="nav-link">
                        <i class="fas fa-calendar"></i> My Events
                    </a>
                <% } else if (locals.user.role === 'student') { %>
                    <a href="/student/dashboard" class="nav-link">
                        <i class="fas fa-home"></i> Home
                    </a>
                    <a href="/student/discover" class="nav-link">
                        <i class="fas fa-search"></i> Discover
                    </a>
                    <a href="/student/tickets" class="nav-link">
                        <i class="fas fa-ticket-alt"></i> My Tickets
                    </a>
                <% } %>
                
                <!-- Common Links -->
                <a href="/notifications" class="nav-link notification-link">
                    <i class="fas fa-bell"></i>
                    <span class="notification-badge" id="notification-count">0</span>
                </a>
                
                <!-- User Dropdown -->
                <div class="nav-dropdown">
                    <button class="nav-dropdown-btn">
                        <i class="fas fa-user"></i>
                        <%= locals.user.name %>
                        <i class="fas fa-chevron-down"></i>
                    </button>
                    <div class="nav-dropdown-content">
                        <a href="/profile" class="dropdown-link">
                            <i class="fas fa-user-edit"></i> Profile
                        </a>
                        <a href="/settings" class="dropdown-link">
                            <i class="fas fa-cog"></i> Settings
                        </a>
                        <hr class="dropdown-divider">
                        <form action="/auth/logout" method="POST" class="logout-form">
                            <button type="submit" class="dropdown-link logout-btn">
                                <i class="fas fa-sign-out-alt"></i> Logout
                            </button>
                        </form>
                    </div>
                </div>
            <% } else { %>
                <a href="/auth/login" class="nav-link">Login</a>
                <a href="/auth/register" class="nav-link btn-primary">Register</a>
            <% } %>
        </div>
        
        <!-- Mobile Menu Toggle -->
        <div class="nav-toggle" id="nav-toggle">
            <span class="bar"></span>
            <span class="bar"></span>
            <span class="bar"></span>
        </div>
    </div>
</nav>